<admintpl file="header"/>
</head>
<body>
<div class="wrap">
    <ul class="nav nav-tabs">
        <li><a href="{:U('AdminGoods/index')}">商品列表</a></li>
        <li class="active"><a href="{:U('AdminGoods/add_goods')}">商品添加</a></li>
    </ul>
    <form method="post" class="form-horizontal js-ajax-form" enctype="multipart/form-data" action="{$arr.url}">
        <div class="control-group">
            <label class="control-label">商品图片:</label>
<!--            <input type='text' name='buffer' value="{$arr.buffer}">-->
            <input type='file' name='buffer'>
            <input type='file' name='goods_img3'>
            <input type='file' name='goods_img4'>
            <input type='file' name='goods_img5'>
        </div>

        <div class="control-group">
            <label class="control-label">商品标题</label>
            <div class="controls">
                <input type="text" name="goods_name" id="goods_name" value="花花2017春装款公子七匹林弯狼弯旗舰店才ga子快p鱼专柜正品男装" placeholder="请输入商品标题"> &nbsp;&nbsp;<span style="color: red">*</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">商品分类</label>
            <div class="controls">
                <input type="text" id="cat_id" name="cat_id" value="1" placeholder="请填写商品分类">
            </div>
        </div>


        <div class="control-group">
            <label class="control-label">商品分组</label>
            <div class="controls">
                <input type="text" id="group_id" name="group_id" value="1" placeholder="请填写商品分组">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">品牌</label>
            <div class="controls">
                <input type="text" id="brand_id" name="brand_id" value="1" placeholder="请填写品牌">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">规格</label>
            <div class="controls">
                <input type="text" id="properties" name="properties" value="M+绿色+70g" placeholder="请填写规格">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">cost</label>
            <div class="controls">
                <input type="text" id="cost" name="cost" value="23.00;56.00;50.00" placeholder="cost">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">sku价格</label>
            <div class="controls">
                <input type="text" id="price" name="price" value="66.00;122.00;150.00" placeholder="sku价格">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">数量</label>
            <div class="controls">
                <input type="text" id="quantity" name="quantity" value="20;23;56" placeholder="数量">
            </div>
        </div>


        <div class="control-group">
            <label class="control-label">进价</label>
            <div class="controls">
                <input type="text" id="buy_price" name="buy_price" value="22.00" placeholder="请填写进价">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">售价</label>
            <div class="controls">
                <input type="text" id="shop_price" name="shop_price" value="125.00" placeholder="请填写售价">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">库存</label>
            <div class="controls">
                <input type="text" id="goods_number" name="goods_number" value="120" placeholder="请填写库存">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">商品条码</label>
            <div class="controls">
                <input type="text" id="bar_code" name="bar_code" value="6926032353065" placeholder="请填写商品条码">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">图文</label>
            <div class="controls">
                <input type='file' name='pic_desc1'>
                <input type='file' name='pic_desc2'>
                <input type='file' name='pic_desc3'>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" id="onSubmit" class="btn btn-primary js-ajax-submit">{:L('ADD')}</button>
            <a class="btn" href="javascript:history.back(-1);">{:L('BACK')}</a>
        </div>

    </form>
</div>
<script src="__PUBLIC__/js/common.js"></script>
</body>
</html>